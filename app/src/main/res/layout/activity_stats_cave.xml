<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tintin.mat.winecellar.activity.StatsCaveActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/scrollViewStats">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textCellarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stats_cellar_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
        />

        <View
            android:id="@+id/separation1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/textCellarValue"
            android:layout_marginTop="25dp"
        />

        <TextView
            android:id="@+id/textBouteilleNb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statsNb"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separation1"
            android:layout_marginTop="25dp"
            android:layout_marginStart="35dp"
            android:onClick="onClickTextBouteilleNb"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/textBouteillePct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statsPct"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="35dp"
            app:layout_constraintTop_toTopOf="@id/textBouteilleNb"
            android:onClick="onClickTextBouteillePct"
            android:clickable="true"
            android:focusable="true" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartInCellar_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textBouteilleNb" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartDeg_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@+id/pieChartInCellar_view" />

        <View
            android:id="@+id/separation2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/pieChartDeg_view"
            android:layout_marginBottom="25dp"
        />


    </android.support.constraint.ConstraintLayout>
</ScrollView>